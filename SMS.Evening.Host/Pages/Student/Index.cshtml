@page
@model SMS.Evening.Host.Pages.Student.IndexModel
@{
}
<div class="container">
    <div>
        <a class="btn btn-success" asp-page="/Student/CreateStudent" role="button">
            <i class="fa-solid fa-plus"></i> Add
        </a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Gender</th>
                <th scope="col">Grade Level</th>
                <th scope="col">Contact</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.StudentsVM.Count > 0)
            {
                foreach(var item in Model.StudentsVM)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.DateOfBirth</td>
                        <td>@item.Gender</td>
                        <td>@item.GradeLevel</td>
                        <td>@item.Contact</td>
                        <td>
                            <a asp-page="/Student/UpdateStudent" asp-route-id="@item.StudentID" role="button">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        No Data.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>