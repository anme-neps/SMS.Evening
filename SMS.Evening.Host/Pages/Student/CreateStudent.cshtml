@page
@model SMS.Evening.Host.Pages.Student.CreateStudentModel
@{
}
<div class="container">
    <h2>Create Student</h2>
    <form method="post" asp-page="/Student/CreateStudent">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="First Name" asp-for="@Model.StudentVM.FirstName" />
            </div>
            <div class="form-group col-md-6">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Last Name" asp-for="@Model.StudentVM.LastName" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="dob">Date Of Birth</label>
                <input type="text" class="form-control" id="dob" placeholder="Date Of Birth" asp-for="@Model.StudentVM.DateOfBirth" />
            </div>
            <div class="form-group col-md-6">
                <label for="gender">Gender</label>
                <select class="form-control" id="gender" asp-for="@Model.StudentVM.Gender">
                    <option selected>Select Gender</option>
                    @{
                        if(Model.GenderList.Count > 0)
                        {
                            foreach(var item in Model.GenderList)
                            {
                                <option value="@item">@item</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="gradeLevel">Grade Level</label>
                <input type="text" class="form-control" id="gradeLevel" placeholder="Grade Level" asp-for="@Model.StudentVM.GradeLevel" />
            </div>
            <div class="form-group col-md-6">
                <label for="contact">Contact</label>
                <input type="text" class="form-control" id="contact" placeholder="Contact" asp-for="@Model.StudentVM.Contact" />
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" />
            <a class="btn btn-danger" asp-page="/Index" role="button">Cancel</a>
        </div>
    </form>
</div>