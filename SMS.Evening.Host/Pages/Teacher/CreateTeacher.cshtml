@page
@model SMS.Evening.Host.Pages.Teacher.CreateTeacherModel
@{
}
<div class="container">
    <h2>Create Teacher</h2>
    <form method="post" asp-page="/Teacher/CreateTeacher">
        <div class="row">
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="firstName" placeholder="First Name" asp-for="@Model.TeacherVM.FirstName" />
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="lastName" placeholder="Last Name" asp-for="@Model.TeacherVM.LastName" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <input type="date" class="form-control" id="dob" placeholder="Date Of Birth" asp-for="@Model.TeacherVM.DateOfBirth" />
            </div>
            <div class="form-group col-md-6">
                <select class="form-control" id="gender" asp-for="@Model.TeacherVM.Gender">
                    <option selected>Select Gender</option>
                    @{
                        if (Model.GenderList.Count > 0)
                        {
                            foreach (var item in Model.GenderList)
                            {
                                <option value="@item">@item</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="subject" placeholder="Subject" asp-for="@Model.TeacherVM.Subject" />
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="phone" placeholder="Phone" asp-for="@Model.TeacherVM.Phone" />
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="email" placeholder="Email" asp-for="@Model.TeacherVM.Email" />
            </div>
        </div>
        <div>
            @*Save Button*@
            <input type="submit" class="btn btn-primary" />
            @*Cancel Button*@
            <a class="btn btn-danger" asp-page="/Teacher/Index" role="button">Cancel</a>
        </div>
    </form>
</div>